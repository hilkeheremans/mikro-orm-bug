{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "preserve",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "dev-scripts", "src/zzz/**/*"]
}
